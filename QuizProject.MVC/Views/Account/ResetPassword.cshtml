@model QuizProject.MVC.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    var role = ViewData["Role"]?.ToString() ?? "Student";

    string roleColor = role switch
    {
        "Admin" => "#dc3545",
        "Teacher" => "#0d6efd",
        "Student" => "#198754",
        _ => "#6c757d"
    };

    string roleIcon = role switch
    {
        "Admin" => "🛡️",
        "Teacher" => "📚",
        "Student" => "🎓",
        _ => "👤"
    };
}

<style>
    :root {
        --role-color: @roleColor;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .reset-card {
        max-width: 400px;
        margin: 200px auto;
        padding: 30px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        border-radius: 12px;
        background-color: #fff;
        border-top: 8px solid var(--role-color);
        color: #333;
    }

        .reset-card h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 700;
            color: var(--role-color);
            user-select: none;
        }

            .reset-card h2 .role-icon {
                font-size: 2rem;
                vertical-align: middle;
                margin-right: 10px;
            }

    .btn-primary {
        background-color: var(--role-color);
        border-color: var(--role-color);
    }

        .btn-primary:hover {
            background-color: darken(var(--role-color), 10%);
            border-color: darken(var(--role-color), 10%);
        }

    .text-primary {
        color: var(--role-color) !important;
        font-weight: 600;
    }

    .go-home-btn {
        position: fixed;
        top: 1rem;
        left: 1rem;
        background-color: var(--role-color);
        color: white;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        font-size: 1.5rem;
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        transition: background-color 0.3s ease;
        z-index: 1000;
    }

        .go-home-btn:hover {
            background-color: #00000033;
        }
</style>

<a href="@Url.Action("Index", "Account")" class="go-home-btn" title="Go Home">🏠</a>

<div class="reset-card">
    <h2>
        <span class="role-icon">@roleIcon</span>
        Reset Password as @role
    </h2>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">@TempData["error"]</div>
    }

    <form asp-action="ResetPassword" method="post" novalidate>
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="Role" value="@role" />

        <div class="mb-3">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" type="password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
    </form>

    <p class="mt-4 text-center">
        Remembered your password?
        <a asp-action="Login" asp-route-role="@role" class="text-decoration-none text-primary">
            Login as @role
        </a>
    </p>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
